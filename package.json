{
    "name": "pkm-syntax-highlighter",
    "displayName": "PKM Syntax Highlighter",
    "description": "PKM Syntax highlighting based on Tree-sitter and forked from https://github.com/EvgeniyPeshkov/syntax-highlighter",
    "homepage": "https://github.com/Aggharta/syntax-highlighter",
    "version": "0.0.1",
    "publisher": "jatzeklazar",
    "license": "MIT",
    "icon": "images/syntax.png",
    "galleryBanner": {
        "color": "#263238",
        "theme": "dark"
    },
    "repository": {
        "url": "https://github.com/Aggharta/syntax-highlighter"
    },
    "author": {
        "name": "Jatzek Lazar"
    },
    "categories": [
        "Programming Languages",
        "Themes",
        "Other"
    ],
    "keywords": [
        "Syntax",
        "Highlighter",
        "Highlight",
        "Highlighting",
        "Coloring",
        "Tree-Sitter",
        "Parser",
        "PKM"
    ],
    "engines": {
        "vscode": "^1.15.0"
    },
    "activationEvents": [
        "onLanguage:pkm"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "vscode:package": "node ./node_modules/.bin/vsce package",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./scripts/build.js"
    },
    "dependencies": {
        "jsonc-parser": "^2.2.0",
        "nan": "^2.14.0",
        "web-tree-sitter": "^0.16.0"
    },
    "devDependencies": {
        "@types/node": "^11.10.0",
        "@types/vscode": "1.41.0",
        "tree-sitter": "^0.16.0",
        "tree-sitter-cli": "^0.16.2",
        "tree-sitter-pkm": "0.0.2",
        "tslint": "^5.20.1",
        "typescript": "^3.7.4",
        "vsce": "^1.71.0",
        "supports-color": "^5.5.0"
    },
    "contributes": {
        "languages": [
            {
                "id": "pkm",
                "extensions": [
                    ".pkm",
                    ".pkf"
                ]
            }
        ],
        "colors": [
            {
                "id": "syntax.parameter",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#5d78ec",
                    "light": "#5d78ec",
                    "highContrast": "#5d78ec"
                }
            },
            {
                "id": "syntax.undefined",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#f12a55",
                    "light": "#f12a55",
                    "highContrast": "#f12a55"
                }
            },
            {
                "id": "syntax.number",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#168b2a",
                    "light": "#168b2a",
                    "highContrast": "#168b2a"
                }
            },
            {
                "id": "syntax.datetime",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#168b2a",
                    "light": "#168b2a",
                    "highContrast": "#168b2a"
                }
            },
            {
                "id": "syntax.object_reference",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#ff8c09",
                    "light": "#ff8c09",
                    "highContrast": "#ff8c09"
                }
            },
            {
                "id": "syntax.text",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#8eff72",
                    "light": "#8eff72",
                    "highContrast": "#8eff72"
                }
            },
            {
                "id": "syntax.boolean",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#13a700",
                    "light": "#13a700",
                    "highContrast": "#13a700"
                }
            },
            {
                "id": "syntax.comment",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#a3a3a3",
                    "light": "#a3a3a3",
                    "highContrast": "#a3a3a3"
                }
            },
            {
                "id": "syntax.type",
                "description": "Color for types (class, struct, enum)",
                "defaults": {
                    "dark": "#26A69A",
                    "light": "#26A69A",
                    "highContrast": "#26A69A"
                }
            },
            {
                "id": "syntax.scope",
                "description": "Color for scopes (namespace, module, outer class)",
                "defaults": {
                    "dark": "#00897B",
                    "light": "#00897B",
                    "highContrast": "#00897B"
                }
            },
            {
                "id": "syntax.function",
                "description": "Color for functions (function, method, interface)",
                "defaults": {
                    "dark": "#00BCD4",
                    "light": "#00BCD4",
                    "highContrast": "#00BCD4"
                }
            },
            {
                "id": "syntax.variable",
                "description": "Color for variables (variable, field, property)",
                "defaults": {
                    "dark": "#42A5F5",
                    "light": "#42A5F5",
                    "highContrast": "#42A5F5"
                }
            },
            {
                "id": "syntax.string",
                "description": "Color for strings (string, regex, char)",
                "defaults": {
                    "dark": "#90A4AE",
                    "light": "#90A4AE",
                    "highContrast": "#90A4AE"
                }
            },
            {
                "id": "syntax.number",
                "description": "Color for numbers (10, 10.0f)",
                "defaults": {
                    "dark": "#90A4AE",
                    "light": "#90A4AE",
                    "highContrast": "#90A4AE"
                }
            },
            {
                "id": "syntax.punctuation",
                "description": "Color for punctuation (., :, {)",
                "defaults": {
                    "dark": "#A1887F",
                    "light": "#A1887F",
                    "highContrast": "#A1887F"
                }
            },
            {
                "id": "syntax.comment",
                "description": "Color for comments",
                "defaults": {
                    "dark": "#546E7A",
                    "light": "#546E7A",
                    "highContrast": "#546E7A"
                }
            },
            {
                "id": "syntax.constant",
                "description": "Color for constants (true, nullptr, nil)",
                "defaults": {
                    "dark": "#A89F9B",
                    "light": "#A89F9B",
                    "highContrast": "#A89F9B"
                }
            },
            {
                "id": "syntax.directive",
                "description": "Color for directives (#include, import, use)",
                "defaults": {
                    "dark": "#7E57C2",
                    "light": "#7E57C2",
                    "highContrast": "#7E57C2"
                }
            }
        ],
        "configuration": {
            "title": "{Syntax Highlighter} configuration",
            "properties": {
                "syntax.highlightComment": {
                    "description": "Enable highlighting of comments",
                    "type": "boolean",
                    "default": true
                },
                "syntax.highlightLanguages": {
                    "description": "Enabled languages",
                    "type": "array",
                    "default": [
                        "pkm"
                    ]
                },
                "syntax.debugHover": {
                    "description": "Show tool-tip with syntax scope on hover",
                    "type": "boolean",
                    "default": false
                },
                "syntax.debugDepth": {
                    "description": "Depth of syntax scope in debug tools",
                    "type": "integer",
                    "default": -1
                }
            }
        }
    }
}
